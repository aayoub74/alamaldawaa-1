<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="partner_form_inherit_view" model="ir.ui.view">
            <field name="name">partner_f</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <page name="sales_purchases" position="after">
                    <page name="extend_fields" string="extra info">
                        <group>
                            <field name="owner"/>
                            <field name="specialization"/>
                            <field name="authorization_number"/>
                            <field name="authorization_start"/>
                            <field name="authorization_end"/>
                            <field name="authorization_status"/>
                            <!--<field name="bo_box"/>-->
                        </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</odoo>