<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- ####   Electronic signature in the invoice report   #### -->

<template id="report_invoice_document_electronic_signature" inherit_id="account.report_invoice_document">
    <xpath expr="//div[@class='page']/table[@class='table table-condensed']/tbody[@class='invoice_tbody']/tr/td[6]/span[1]" position="replace">
            <span t-esc="', '.join(map(lambda x: str(x.amount), l.invoice_line_tax_ids))"/>%
    </xpath>
    <xpath expr="//div[@class='page']/p[1]" position="after">
            <p t-if="'signature_img' in user" class="text-center">
                <p class="text-center">
                    <strong>Cachet et signature : La Direction</strong>
                </p>
                <p class="text-center">
                    <img t-if="user.signature_img" t-att-src="'data:image/png;base64,%s' % user.signature_img" style="max-height: 120px;"/>
                </p>
            </p>
    </xpath>

</template>

</data>
</openerp>
