<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- ####   Electronic signature in the Sale Order report   #### -->

<template id="report_saleorder_document_electronic_signature" inherit_id="sale.report_saleorder_document">
    <xpath expr="//div[@class='page']/p[@id='fiscal_position_remark']" position="before">
            <p t-if="'signature_img' in user" class="text-center">
                <p class="text-center">
                    <strong>Cachet et signature : La Direction</strong>
                </p>
                <p class="text-center">
                    <img t-if="user.signature_img" t-att-src="'data:image/png;base64,%s' % user.signature_img" style="max-height: 120px;"/>
                </p>
            </p>
    </xpath>

</template>

</data>
</openerp>
