        <!-- Expiry States-->
        <record id="product_expiry_state_tree_view" model="ir.ui.view">
            <field name="name">product.expiry.state.tree.view</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">orange: expiry_state == 'best_before';
                        blue: expiry_state == 'alert';
                        gold: expiry_state == 'to_remove';
                        green: expiry_state == 'normal';
                        red: expiry_state == 'expired'
                    </attribute>
                </xpath>
                <field name="create_date" position="after">
                    <field name="life_date"/>
                    <field name="expiry_state"/>
                </field>
            </field>
        </record>
        <!-- Reomval,alert and expiry Filter -->
        <record id="stock_production_lot_expiry_search_view" model="ir.ui.view">
            <field name="name">stock.production.lot.expiry.search</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.search_product_lot_filter"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="expiry_state"/>
                    <filter context="{}" domain="[('alert_date','&gt;=', context_today().strftime('%Y-%m-1')),                         ('alert_date','&lt;', ((context_today() + relativedelta(months=1)).strftime('%Y-%m-1')) )]" help="" name="in_alert_this_month" string="In Alert This Month"/>
                    <filter context="{}" domain="[('removal_date','&gt;=', context_today().strftime('%Y-%m-1')),                         ('removal_date','&lt;', ((context_today() + relativedelta(months=1)).strftime('%Y-%m-1')) )]" help="" name="to_remove_this_month" string="To Remove This Month"/>
                    <filter context="{}" domain="[('life_date','&gt;=', context_today().strftime('%Y-%m-1')),                         ('life_date','&lt;', ((context_today() + relativedelta(months=1)).strftime('%Y-%m-1')) )]" help="" name="expiry_this_month" string="Expires This Month"/>
                    <filter domain="[                                 '&amp;',                                 ('alert_date', '&gt;=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),                                 ('alert_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),                             ]" name="in_alert_this_week" string="In Alert This Week"/>
                    <filter domain="[                                 '&amp;',                                 ('removal_date', '&gt;=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),                                 ('removal_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),                             ]" name="to_remove_this_week" string="To Remove This Week"/>
                    <filter domain="[                                 '&amp;',                                 ('life_date', '&gt;=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),                                 ('life_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),                             ]" name="expiry_this_week" string="Expires This Week"/>
                </field>
            </field>
        </record>
        <!-- Lot Return -->
        <record id="view_form_lot_return" model="ir.ui.view">
            <field name="name">view.form.lot.return</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <sheet position='before'>
                    <header>
                        <button name="%(alda_enhance.act_stock_return_quant)d" type='action' string="Return" class="oe_highlight"/>
                    </header>
                </sheet>
            </field>
        </record>

        <!-- Quant tree-->
        <record id="quant_expiry_tree_view" model="ir.ui.view">
            <field name="name">quant.expiry.tree.view</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lot_id']" position="after">
                    <field name="life_date"/>
                    <field name="expiry_state"/>
                </xpath>
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">orange: expiry_state == 'best_before';
                        blue: expiry_state == 'alert';
                        gold: expiry_state == 'to_remove';
                        green: expiry_state == 'normal';
                        red: expiry_state == 'expired'
                    </attribute>
                </xpath>
            </field>
        </record>
        <record id="stock_quant_expiry_search_view" model="ir.ui.view">
            <field name="name">stock.quant.expiry.search</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.quant_search_view"/>
            <field name="arch" type="xml">
                <field name="lot_id" position="after">
                    <field name="expiry_state"/>
                </field>
            </field>
        </record>

        <!-- Bouns in Stock picking-->
        <record id="stock_picking_form_view_bouns" model="ir.ui.view">
            <field name="name">stock.picking.form.view.bouns</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="qty_done" position="after">
                    <field name="orig_qty"/>
                    <field name="bouns"/>
                </field>
            </field>
        </record>
    </data>
</odoo>