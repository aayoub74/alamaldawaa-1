<odoo>
    <data>
        <record id="scarp_wizard_view" model="ir.ui.view">
            <field name="name">scrap form view</field>
            <field name="model">scrap.wizard</field>
            <field name="arch" type="xml">
                <form string="Scrap">
                    <group col="4">
                        <field name="lot_id"/>
                        <field name="location_id"/>
                    </group>
                    <footer>
                        <button string="Scrap" name="scrap_lot" type="object" class="btn-primary"/>
                        or
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_scrap_wizard" model="ir.actions.act_window">
            <field name="name">Action Scrap Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">scrap.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'default_lot_id': active_id}</field>
        </record>

    </data>
</odoo>