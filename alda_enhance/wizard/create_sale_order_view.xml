<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <act_window id="act_create_sale_order"
                name="Create Sale Order"
                res_model="quotation.wizard"
                src_model="product.template"
                key2="client_action_multi"
                view_mode="form"
                target="new"/>

    <record id="view_create_sale_order_form" model="ir.ui.view">
        <field name="name">Create sale order form product</field>
        <field name="model">quotation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col='2'>
                    <field name="partner_id"/>
                    <field name="sale_order_id" domain="[('state','=','draft'),('partner_id','=',partner_id)]"/>
                </group>
                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="product_id"/>
                        <field name="qty"/>
                        <field name="bonus"/>
                    </tree>
                </field>
                <footer>
                    <button name="create_sale_order" string="Create Quotation" type="object" class="btn-primary"/>
                    <button name="create_view_sale_order" string="Create &amp; View Quotation" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>